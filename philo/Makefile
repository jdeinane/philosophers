NAME		=	philo

SRCS		=

CC			=	cc

CFLAGS		=	-Wall -Wextra -Werror -g3

OBJS		=	$(SRCS:.c=.o)

all:		$(NAME)

$(NAME):	$(OBJS)
			make -C
			$(CC) -o $(NAME) $(OBJS) $(LFLAGS)
			@echo "\033[32m ~~ ./philo successfully created! ~~"
			@echo "$$BIBOU"

clean:
			make clean -C
			rm -rf $(OBJS)
			@echo "\033[31m ~~ ./philo successfully deleted! ~~"

fclean:		clean
			rm -rf $(NAME)
			@echo "\033[31m ~~ ./philo successfully fdeleted! ~~"


re:			fclean all

.PHONY:		all clean fclean re

